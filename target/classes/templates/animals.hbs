{{#partial "styles"}}
    <link rel='stylesheet' href='/css/styles.css'>
{{/partial}}
{{#partial "content"}}
    <p>All animals</p>
    <div class="container" id="animalsStyles">
        {{#if animals}}
            {{#each animals as |a|}}
                <div class="col-md-4">
                    <div class="card" >
                        <div class="card-body">
                            <h5 class="card-title">{{a.name}}</h5>
                            <p class="card-text">{{a.type}}</p>
                            <p class="card-text">{{a.health}}</p>
                            <p class="card-text">{{a.age}}</p>
                            <a href="/animals/{{id}}/delete"><button class="btn btn-danger">Delete animal</button></a>
                        </div>
                    </div>
                </div>
            {{/each}}
            <h2>Registered animals, register here <a href="/create/animals">here</a></h2>
        {{/if}}
    </div>
{{/partial}}
{{> layout.hbs}}