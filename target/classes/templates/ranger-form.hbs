{{#partial "styles"}}
    <link rel='stylesheet' href='/css/styles.css'>
{{/partial}}
{{#partial "content"}}
    <p>Add ranger here:</p>
    <form action="/create/rangers/new" method="post" class="form">
        <div class="form-group">
            <label for="name">Ranger Name</label>
            <input id="name" name="name" type="text" class="form-control">
        </div>
        <div class="form-group">
            <label for="badgeNo">Badge No</label>
            <input id="badgeNo" name="badgeNo" type="number" class="form-control">
        </div>
        <button type="submit" class="btn btn-dark">Add Ranger</button>
    </form>
{{/partial}}
{{> layout.hbs}}