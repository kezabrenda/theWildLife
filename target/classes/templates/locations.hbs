{{#partial "styles"}}
    <link rel='stylesheet' href='/css/styles.css'>
{{/partial}}
{{#partial "content"}}
    <h1 class="p">All locations</h1>
    <div class="container">
        <div class="col-md-4">
            {{#if locations}}
                {{#each locations as |l|}}
                    <div class="container">
                        <p class="text" id={{id}}>{{l.name}}</p><br>
                        <a href="/view/locations/sightings/{{l.id}}"><button class="btn btn-primary btn-md">View Sightings</button></a>
                    </div>
                    <hr><br>
                {{/each}}

            {{else}}
                <p class="text display-4">Create location <a href="/create/locations">animals</a></p>
            {{/if}}
        </div>
        {{#if sightings}}
        <div class="col-md-8">

            <div class="card">
                <div class="card-body">
                    <h1 class="card-title">Sightings</h1>
                    <hr>
                    <div class="col-md-4">
                        <h3>Time</h3>
                        <hr>
                        {{#each sightings as |s|}}
                            <li class="card-text ">{{s.time}}</li>
                        {{/each}}

                    </div>
                    <div class="col-md-4">
                        <h3>Animal</h3>
                        <hr>
                        {{#each animals as |a|}}
                            <li class="card-text ">{{a}}</li>
                        {{/each}}
                    </div>
                    <div class="col-md-4">
                        <h3>Type</h3>
                        <hr>
                        {{#each types as |t|}}
                            <li class="card-text ">{{t}}</li>
                        {{/each}}
                    </div>
                </div>
            </div>
        {{else}}
            <h3>No Sightings in this location. Add <a href="/create/sightings">sighting</a></h3>
        {{/if}}
    </div>
    </div>
    <br>
{{/partial}}
{{> layout.hbs}}