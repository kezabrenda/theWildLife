{{#partial "styles"}}
    <link rel='stylesheet' href='/css/styles.css'>
{{/partial}}
{{#partial "content"}}
    <h1>All rangers</h1>
    <div class="container">
    {{#each rangers}}
            <p class="card-title"><strong>{{name}}</strong></p>
            <p>Badge No: {{badgeNo}}</p>
            <form action="/rangers/{{id}}/delete" method="post">
                <a href="/rangers/{{id}}/delete"><button class="btn btn-dark">Delete ranger</button></a>
            </form>
        </div>
    {{/each}}
    <div>
        <a href="/rangers/new"><button class="btn btn-unique">Add New Ranger</button></a>
    </div>
{{/partial}}
{{> layout.hbs}}