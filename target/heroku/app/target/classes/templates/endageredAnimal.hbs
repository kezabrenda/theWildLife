{{#partial "styles"}}
    <link rel='stylesheet' href='/css/styles.css'>
{{/partial}}
{{#partial "content"}}
    <p>All endangered animals</p>
    <div class="container" id="animalsStyles">
        <form action="/create/animal/new" method="post">
            <h1 class="text">Register the Animal</h1>
            {{#if endangered}}
                <div class="form-group">
                    <label for="type">Type</label><br>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="type" id="inlineRadio1" value="normal"
                               onClick="window.location = '/create/animal';" >
                        <label class="form-check-label" for="inlineRadio1">Safe</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="type" id="inlineRadio1" value="endangered"
                               onClick="window.location = '/create/animal/endangered';" checked>
                        <label class="form-check-label" for="inlineRadio2">Endangered</label>

                    </div>
                </div>
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control " id="name" name="name" placeholder="Animal Name" required>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label  for="health">Animal's health</label>
                        </div>
                        <div class="form-group">
                            <select class="selector" id="health" name="health">
                                <option selected>Choose the health</option>
                                {{#if health }}
                                    {{#each health as |h|}}
                                        <option name="health" value={{h}}>{{h}}</option>
                                    {{/each}}

                                {{/if}}
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label  for="health">Animal's age</label>
                        </div>
                        <div class="form-group">
                            <select class="selector" id="age" name="age">
                                <option selected>Choose the age</option>
                                {{#if age }}
                                    {{#each age as |a|}}
                                        <option name="age" value={{a}}>{{a}}</option>
                                    {{/each}}

                                {{/if}}
                            </select>
                        </div>
                    </div>

                </div>


            {{else}}
                <div class="form-group">
                    <label for="type">Type</label><br>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="type" id="inlineRadio1" value="normal"
                               onClick="window.location = '/create/animal';" checked>
                        <label class="form-check-label" for="inlineRadio1">Safe</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="type" id="inlineRadio1" value="endangered"
                               onClick="window.location = '/create/animal/endangered';">
                        <label class="form-check-label" for="inlineRadio2">Endangered</label>

                    </div>
                </div>
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control form-control-lg" id="name" name="name" placeholder="Input Name..." required>
                </div>

            {{/if}}
            <div class="row">
                <div class="col-md-4"></div>
                <div class="col-md-6">
                    <div class="form-group">
                        <button type="submit" class="btn btn-info "> Create </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
{{/partial}}
{{> layout.hbs}}