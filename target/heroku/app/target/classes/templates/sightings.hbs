{{#partial "styles"}}
    <link rel='stylesheet' href='/css/styles.css'>
{{/partial}}
{{#partial "content"}}
    <h1>All sightings</h1>
    <div class="container">
    {{#each sightings}}
            <p>Sighted By: {{animalId}}</p>
            <p>Location: {{rangerId}}</p>
            <p>Time: {{locationId}}</p>
            <form action="/sightings/{{id}}/delete" method="post">
                <a href="/sightings/{{id}}/delete"><button>Delete sighting</button></a>
            </form>
        </div>
    {{/each}}
    <div>
        <a href="/sightings/new"><button class="btn btn-dark">Add New Sighting</button></a>
    </div>
{{/partial}}
{{> layout.hbs}}